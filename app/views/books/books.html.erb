<h1>GET Books#books</h1>

<h1>Books</h1>

<% @books.each do |book| %>
  <p>Title</p>
  <span><%= book.title %></span>
  <p>Body</p>
  <span><%= book.body %></span>
  <p>Id</p>
  <span><%= book.id %></span>
  <%= link_to '詳細', book_path(book) %>
  <%= link_to '編集', edit_book_path(book) %>
  <%= link_to "削除", book_path(book), method: :delete %>
  <% end %>

<h1>New book</h1>

<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>