<div id="books-container">

<h1 class="books-title">タイトル一覧</h1>

<table>

  <thead height="30">
    <tr>
      <th>タイトル</th>
      <th>感想</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @books.each do |book| %>

    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to '詳細', book_path(book) %></td>
      <td><%= link_to '編集', edit_book_path(book) %></td>
      <td><%= link_to "削除", book_path(book), method: :delete %></td>
    </tr>

    <% end %>

  </tbody>

</table>

<h1>新規作成</h1>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
     <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= form_with model: @book, url:'/books', local:true do |f| %>

  <div class="field-wrap">
    <%= f.label :title, 'Title' %>
    <%= f.text_field :title %>
  </div>

  <div class="field-wrap">
    <%= f.label :body, 'Body' %>
    <%= f.text_area :body %>
  </div>

  <div class="field-wrap button">
    <%= f.submit '新規作成' %>
  </div>

<% end %>

</div>