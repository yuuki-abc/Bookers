<h1>GET Books#books</h1>


<% @books.each do |book| %>
  <p>タイトル</p>
  <span><%= book.title %></span>
  <p>本文</p>
  <span><%= book.body %></span>
<% end %>

<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>