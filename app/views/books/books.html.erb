<h1>GET Books#books</h1>

<h1>タイトル一覧</h1>

<% @books.each do |book| %>
  <p>タイトル</p>
  <span><%= book.title %></span>
  <p>感想</p>
  <span><%= book.body %></span>
  <%= link_to '詳細', book_path(book) %>
  <%= link_to '編集', edit_book_path(book) %>
  <%= link_to "削除", book_path(book), method: :delete %>
  <% end %>

<h1>新規作成</h1>

<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>感想</h4>
  <%= f.text_area :body %>
  <%= f.submit '新規作成' %>
<% end %>